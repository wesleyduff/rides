doctype 5
html(ng-app="app", lang="en")
	head
		title= title
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='/vendor/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/datepicker.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js', type='text/javascript')
		script(src='/javascripts/angular.js', type='text/javascript')
		script(src='/javascripts/angular-resource.js', type='text/javascript')
		script(src='/vendor/bootstrap/js/bootstrap.min.js' type='text/javascript')
		script(src='/javascripts/script.js', type='text/javascript')
		script(src='/javascripts/Services/UserService.js', type='text/javascript')
		script(src='/javascripts/Controllers/HomeController.js', type='text/javascript')
		script(src='/javascripts/bootstrap-datepicker.js', type='text/javascript')
		block headjs
	body(ng-controller="MainCtrl", ng-init="initPage()")
		nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
			.navbar-header
				.button(type="button", data-toggle="collapse", data-target="#bs-collapse").navbar-toggle
					span.icon-bar
					span.icon-bar
					span.icon-bar
				.login-success-view(ng-show="canShowLoginSuccessView", ng-bind="userName").text-info
				a(href="#", ng-click="logOut()", style="display:none").logout-view.text-info
					| logout
				a.navbar-brand(href="/")
					| {{PageTitle}}
			#bs-collapse.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href="/currentRides")
							| Current
					li
						a(href="/upComingRides")
							| Upcoming
					li
						a(href="/pastRides")
							| Past
					li
						a(href="#new-ride-form", data-toggle="modal")
							| Add a Ride
				include includes/login-form.jade
		include includes/register-form.jade
		include includes/new-ride-form

		block content